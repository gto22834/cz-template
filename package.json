{
  "name": "cz-template",
  "version": "0.0.10",
  "description": "The customized Commitizen template to formulate commit message.",
  "main": "index.js",
  "scripts": {
    "commit": "git-cz",
    "test": "echo \"Error: no test specified\" && exit 1",
    "public": "npm version patch && npm publish",
    "version": "git add .",
    "postversion": "git push && git push --tags && rm -rf build/temp"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gto22834/cz-template.git"
  },
  "author": "Simon Ku <gto22834@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gto22834/cz-template/issues"
  },
  "homepage": "https://github.com/gto22834/cz-template#readme",
  "config": {
    "commitizen": {
      "path": "./index.js"
    }
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0"
  },
  "dependencies": {
    "cli-truncate": "^2.1.0",
    "fuse.js": "^5.2.3",
    "inquirer-autocomplete-prompt": "^1.3.0",
    "inquirer-maxlength-input-prompt": "^1.0.2",
    "word-wrap": "^1.2.3"
  }
}
